<div class="container">
  <div class="row justify-content-center p-5">
    <h1><%= @list.name %></h1>
  </div>
  <div class="row justify-content-center">
    <div class="cards">
      <% @movies.each do |movie| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url.gsub(/\s+/, "")%>)">
         <%= link_to movie.title, lists_path, class: "movie_link" %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <div class="row justify-content-center p-5">
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-flat m-2"%>
    <%= link_to 'Back to Lists', lists_path, class: "btn btn-ghost m-2" %>
  </div>
</div>



